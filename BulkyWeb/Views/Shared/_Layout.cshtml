@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BulkyWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BulkyWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-fill me-2"></i>BulkyWeb
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="Customer" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3" asp-area="Customer" asp-controller="Order" asp-action="Index">
                                    <i class="bi bi-bag-check me-1"></i>My Orders
                                </a>
                            </li>
                        }

                        <!-- Content Management Dropdown - Admin Only -->
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole(Bulky.Utility.SD.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle px-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-fill me-1"></i>Content Management
                                    <span class="badge bg-warning text-dark ms-2 small">Admin</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0" style="min-width: 220px;">
                                    <li>
                                        <h6 class="dropdown-header text-primary fw-bold">
                                            <i class="bi bi-collection me-1"></i>Manage Content
                                        </h6>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="Admin" asp-controller="Category" asp-action="Index">
                                            <i class="bi bi-tag-fill me-2 text-primary"></i>
                                            <span>Categories</span>
                                            <small class="text-muted d-block">Manage category listings</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="Admin" asp-controller="Product" asp-action="Index">
                                            <i class="bi bi-book me-2 text-success"></i>
                                            <span>Products</span>
                                            <small class="text-muted d-block">Manage product catalog</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="Admin" asp-controller="Company" asp-action="Index">
                                            <i class="bi bi-building me-2 text-info"></i>
                                            <span>Companies</span>
                                            <small class="text-muted d-block">Manage business partners</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="Admin" asp-controller="Order" asp-action="Index">
                                            <i class="bi bi-clipboard-data me-2 text-warning"></i>
                                            <span>Order Management</span>
                                            <small class="text-muted d-block">Track and manage orders</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="Admin" asp-controller="User" asp-action="Index">
                                            <i class="bi bi-people me-2 text-danger"></i>
                                            <span>User Management</span>
                                            <small class="text-muted d-block">Manage users and roles</small>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item py-2 text-muted disabled" href="#" tabindex="-1" aria-disabled="true">
                                            <i class="bi bi-people me-2"></i>
                                            <span>Authors</span>
                                            <small class="text-muted d-block">Coming soon...</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2 text-muted disabled" href="#" tabindex="-1" aria-disabled="true">
                                            <i class="bi bi-building me-2"></i>
                                            <span>Publishers</span>
                                            <small class="text-muted d-block">Coming soon...</small>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <h6 class="dropdown-header text-warning fw-bold" style="font-size: 0.7rem;">
                                            <i class="bi bi-lightning me-1"></i>Quick Actions
                                        </h6>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-1" asp-area="Admin" asp-controller="Category" asp-action="Create">
                                            <i class="bi bi-plus-circle me-2 text-primary"></i>
                                            <span style="font-size: 0.85rem;">Add Category</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-1" asp-area="Admin" asp-controller="Product" asp-action="Create">
                                            <i class="bi bi-plus-circle me-2 text-success"></i>
                                            <span style="font-size: 0.85rem;">Add Product</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-1" asp-area="Admin" asp-controller="Company" asp-action="Create">
                                            <i class="bi bi-plus-circle me-2 text-info"></i>
                                            <span style="font-size: 0.85rem;">Add Company</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-1" asp-area="Admin" asp-controller="User" asp-action="Create">
                                            <i class="bi bi-plus-circle me-2 text-danger"></i>
                                            <span style="font-size: 0.85rem;">Create User</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="Identity" asp-page="/Account/Register">
                                            <i class="bi bi-people me-2 text-danger"></i>
                                            <span>User Registration</span>
                                            <small class="text-muted d-block">Create new user accounts</small>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Cart Partial (between navigation and login) -->
                    <partial name="_CartPartial" />
                    
                    <!-- Login Partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-primary">
        <div class="container text-center py-3">
            <div class="d-flex flex-column flex-md-row justify-content-center align-items-center">
                <span class="text-white">
                    Made with <i class="bi bi-heart-fill text-danger"></i> by 
                    <strong class="text-warning">Mahmoud</strong>
                </span>
                <span class="text-white-50 ms-md-3 mt-1 mt-md-0">
                    <i class="bi bi-code-slash me-1"></i>
                    Powered by ASP.NET Core
                </span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Enhanced dropdown behavior
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effect for desktop
            const dropdownToggle = document.querySelector('.dropdown-toggle');
            const dropdownMenu = document.querySelector('.dropdown-menu');
            
            if (dropdownToggle && dropdownMenu) {
                // Desktop hover behavior
                if (window.innerWidth >= 992) {
                    let hoverTimeout;
                    
                    dropdownToggle.parentElement.addEventListener('mouseenter', function() {
                        clearTimeout(hoverTimeout);
                        dropdownMenu.classList.add('show');
                        dropdownToggle.setAttribute('aria-expanded', 'true');
                    });
                    
                    dropdownToggle.parentElement.addEventListener('mouseleave', function() {
                        hoverTimeout = setTimeout(() => {
                            dropdownMenu.classList.remove('show');
                            dropdownToggle.setAttribute('aria-expanded', 'false');
                        }, 300);
                    });
                }
                
                // Add smooth animation
                dropdownMenu.style.transition = 'opacity 0.2s ease, transform 0.2s ease';
                
                // Active menu item highlighting
                const currentPath = window.location.pathname.toLowerCase();
                const menuItems = dropdownMenu.querySelectorAll('.dropdown-item:not(.disabled)');
                
                menuItems.forEach(item => {
                    const href = item.getAttribute('href');
                    if (href && currentPath.includes(href.toLowerCase())) {
                        item.classList.add('active');
                        item.style.backgroundColor = 'rgba(13, 110, 253, 0.1)';
                        item.style.borderLeft = '3px solid #0d6efd';
                        item.style.paddingLeft = '1rem';
                    }
                });

                // Add hover effects for dropdown items
                menuItems.forEach(item => {
                    if (!item.classList.contains('disabled')) {
                        item.addEventListener('mouseenter', function() {
                            if (!this.classList.contains('active')) {
                                this.style.backgroundColor = 'rgba(13, 110, 253, 0.05)';
                                this.style.borderLeft = '2px solid #0d6efd';
                                this.style.paddingLeft = '1rem';
                                this.style.transition = 'all 0.2s ease';
                            }
                        });
                        
                        item.addEventListener('mouseleave', function() {
                            if (!this.classList.contains('active')) {
                                this.style.backgroundColor = '';
                                this.style.borderLeft = '';
                                this.style.paddingLeft = '';
                            }
                        });
                    }
                });

                // Add visual feedback for quick actions
                const quickActionItems = dropdownMenu.querySelectorAll('.dropdown-item[href*="Create"]');
                quickActionItems.forEach(item => {
                    item.addEventListener('mouseenter', function() {
                        this.style.transform = 'translateX(2px)';
                        this.style.transition = 'transform 0.2s ease';
                    });
                    
                    item.addEventListener('mouseleave', function() {
                        this.style.transform = '';
                    });
                });
            }

            // Role-based feature highlighting
            const adminBadge = document.querySelector('.badge.bg-warning');
            if (adminBadge) {
                setInterval(() => {
                    adminBadge.style.animation = 'none';
                    setTimeout(() => {
                        adminBadge.style.animation = 'pulse 1.5s ease-in-out';
                    }, 10);
                }, 5000);
            }

            // Handle cart update notifications from TempData
            @if (TempData["CartUpdated"] != null)
            {
                <text>
                // Trigger cart animation when item is added
                setTimeout(() => {
                    if (typeof window.animateCartAddition === 'function') {
                        window.animateCartAddition();
                    }
                }, 500);
                </text>
            }
        });
    </script>

    <style>
        /* Admin badge styling */
        .badge.bg-warning {
            animation: pulse 1.5s ease-in-out infinite;
        }

        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        /* Enhanced admin dropdown styling */
        .nav-item.dropdown .dropdown-menu {
            border: 2px solid rgba(255, 193, 7, 0.2);
        }

        .nav-item.dropdown .dropdown-menu::before {
            content: '';
            position: absolute;
            top: -5px;
            right: 20px;
            width: 10px;
            height: 10px;
            background: white;
            border-left: 2px solid rgba(255, 193, 7, 0.2);
            border-top: 2px solid rgba(255, 193, 7, 0.2);
            transform: rotate(45deg);
        }

        /* Responsive admin badge */
        @@media (max-width: 768px) {
            .badge.bg-warning {
                display: none;
            }
        }
    </style>
</body>
</html>
