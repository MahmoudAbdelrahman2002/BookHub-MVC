@model IEnumerable<Bulky.Models.Models.Product>

@{
    ViewData["Title"] = "Product Management";
}

<div class="container-fluid px-1 px-sm-2 px-md-3 py-2 py-md-4">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-11">
            <!-- Page Header -->
            <div class="mb-3 mb-md-4 text-center">
                <h1 class="display-6 fw-bold text-success mb-2 fs-4 fs-sm-3 fs-md-2">
                    <i class="bi bi-book-fill me-2"></i>Product Management
                </h1>
                <p class="text-muted lead d-none d-md-block mb-0">Manage your product catalog with ease</p>
                <p class="text-muted small d-md-none mb-0">Manage products efficiently</p>
            </div>

            <!-- Stats Cards Row -->
            <div class="row mb-3 mb-md-4 g-1 g-sm-2 g-md-3">
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 3px solid #4b7147 !important;">
                        <div class="card-body text-center py-2 py-sm-3 px-2">
                            <div class="d-flex align-items-center justify-content-center mb-1 mb-sm-2">
                                <div class="bg-success bg-gradient rounded-circle p-2 p-md-3">
                                    <i class="bi bi-book text-white" style="font-size: 0.9rem;"></i>
                                </div>
                            </div>
                            <h5 class="card-title text-success fw-bold mb-1" style="font-size: 1.1rem;">@Model.Count()</h5>
                            <p class="card-text text-muted small mb-0">Total Products</p>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 3px solid #192E2F !important;">
                        <div class="card-body text-center py-2 py-sm-3 px-2">
                            <div class="d-flex align-items-center justify-content-center mb-1 mb-sm-2">
                                <div class="bg-primary bg-gradient rounded-circle p-2 p-md-3">
                                    <i class="bi bi-collection text-white" style="font-size: 0.9rem;"></i>
                                </div>
                            </div>
                            <h5 class="card-title text-primary fw-bold mb-1" style="font-size: 1.1rem;">@Model.Where(p => p.Category != null).Select(p => p.Category.Name).Distinct().Count()</h5>
                            <p class="card-text text-muted small mb-0">Categories</p>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 3px solid #BD7418 !important;">
                        <div class="card-body text-center py-2 py-sm-3 px-2">
                            <div class="d-flex align-items-center justify-content-center mb-1 mb-sm-2">
                                <div class="bg-warning bg-gradient rounded-circle p-2 p-md-3">
                                    <i class="bi bi-currency-dollar text-white" style="font-size: 0.9rem;"></i>
                                </div>
                            </div>
                            <h5 class="card-title text-warning fw-bold mb-1" style="font-size: 1.1rem;">@Model.Average(p => p.Price).ToString("C")</h5>
                            <p class="card-text text-muted small mb-0">Avg Price</p>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 3px solid #4b7147 !important;">
                        <div class="card-body d-flex align-items-center justify-content-between py-2 py-sm-3 px-2 px-sm-3">
                            <div class="flex-grow-1">
                                <h6 class="card-title text-success mb-1 fw-medium" style="font-size: 0.95rem;">Quick Actions</h6>
                                <p class="card-text text-muted small mb-0 d-none d-sm-block">Add products</p>
                            </div>
                            <a asp-action="Create" 
                               class="btn btn-success btn-sm shadow-sm ms-2 fw-medium">
                                <i class="bi bi-plus-circle me-1"></i>
                                <span class="d-none d-sm-inline">Add</span>
                                <span class="d-sm-none">+</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Card -->
            <div class="card border-0 shadow-lg">
                <!-- Card Header -->
                <div class="card-header bg-success bg-gradient text-white py-3 py-md-4" 
                     style="background: linear-gradient(135deg, #4b7147 0%, #578553 100%) !important;">
                    <div class="row align-items-center g-2">
                        <div class="col-12 col-md-6">
                            <h2 class="fs-6 fs-sm-5 fs-md-4 fw-medium mb-0">
                                <i class="bi bi-grid-3x3 me-2"></i>Product Catalog
                            </h2>
                        </div>
                        <div class="col-12 col-md-6">
                            <!-- Search and Filter Controls -->
                            <div class="d-flex flex-column flex-md-row gap-2 justify-content-md-end">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control border-0" 
                                           id="searchInput" 
                                           placeholder="Search products..."
                                           style="background-color: rgba(255,255,255,0.9);">
                                    <button class="btn btn-light border-0 shadow-sm" type="button">
                                        <i class="bi bi-search text-success"></i>
                                    </button>
                                </div>
                                <a asp-action="Create" 
                                   class="btn btn-light btn-sm shadow-sm w-100 w-md-auto fw-medium">
                                    <i class="bi bi-plus-circle me-1 text-success"></i>
                                    <span class="d-none d-sm-inline text-success">Add Product</span>
                                    <span class="d-sm-none text-success">Add</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-0">
                    <!-- Mobile Card View (xs to lg) -->
                    <div class="d-lg-none">
                        @foreach (var product in Model)
                        {
                            <div class="border-bottom product-mobile-item" 
                                 style="transition: background-color 0.2s ease; border-color: rgba(75, 113, 71, 0.1) !important;">
                                <div class="p-2 p-sm-3">
                                    <div class="row align-items-center">
                                        <!-- Product Image -->
                                        <div class="col-2 col-sm-2">
                                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                                            {
                                                <div class="position-relative">
                                                    <img src="@product.ImageUrl" 
                                                         alt="@product.Title" 
                                                         class="img-fluid rounded shadow-sm border border-success"
                                                         style="width: 50px; height: 50px; object-fit: cover; border-width: 2px !important;" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="bg-light border border-success rounded d-flex align-items-center justify-content-center shadow-sm"
                                                     style="width: 50px; height: 50px; border-width: 2px !important;">
                                                    <i class="bi bi-image text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                        
                                        <!-- Product Info -->
                                        <div class="col-6 col-sm-7">
                                            <div class="mb-1">
                                                <h6 class="card-title text-success mb-0 fw-medium" style="font-size: 0.9rem;">@product.Title</h6>
                                                <small class="text-muted">by @product.Author</small>
                                            </div>
                                            <div class="d-flex flex-wrap gap-1 mb-1">
                                                <span class="badge bg-success bg-gradient small fw-medium">@product.Price.ToString("C")</span>
                                                @if (product.Category != null)
                                                {
                                                    <span class="badge bg-primary bg-gradient small fw-medium">
                                                        <i class="bi bi-collection me-1"></i>@product.Category.Name
                                                    </span>
                                                }
                                                <span class="badge bg-secondary bg-gradient small fw-medium">@product.ISBN</span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(product.Description))
                                            {
                                                <p class="text-muted small mb-0" style="font-size: 0.8rem;">
                                                    @(product.Description.Length > 40 ? product.Description.Substring(0, 40) + "..." : product.Description)
                                                </p>
                                            }
                                        </div>
                                        
                                        <!-- Actions -->
                                        <div class="col-4 col-sm-3">
                                            <div class="dropdown">
                                                <button class="btn btn-outline-success btn-sm dropdown-toggle w-100 py-2 shadow-sm" 
                                                        type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                                        style="font-size: 0.8rem;">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0">
                                                    <li>
                                                        <a class="dropdown-item py-2 text-primary" 
                                                           asp-action="Details" asp-route-id="@product.Id">
                                                            <i class="bi bi-eye me-2"></i>Details
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item py-2 text-success" 
                                                           asp-action="Edit" asp-route-id="@product.Id">
                                                            <i class="bi bi-pencil me-2"></i>Edit
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <a class="dropdown-item py-2 text-danger" 
                                                           asp-action="Delete" asp-route-id="@product.Id">
                                                            <i class="bi bi-trash me-2"></i>Delete
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Desktop Table View (lg and up) -->
                    <div class="d-none d-lg-block">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0" id="productTable">
                                <thead style="background: linear-gradient(135deg, rgba(75, 113, 71, 0.05) 0%, rgba(87, 133, 83, 0.05) 100%);">
                                    <tr>
                                        <th scope="col" class="py-3 ps-4 text-success fw-medium border-0" style="width: 8%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-image me-2"></i>Image
                                            </div>
                                        </th>
                                        <th scope="col" class="py-3 text-success fw-medium border-0" style="width: 18%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-book me-2"></i>Title
                                            </div>
                                        </th>
                                        <th scope="col" class="py-3 text-success fw-medium border-0" style="width: 12%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person me-2"></i>Author
                                            </div>
                                        </th>
                                        <th scope="col" class="py-3 text-success fw-medium border-0" style="width: 12%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-collection me-2"></i>Category
                                            </div>
                                        </th>
                                        <th scope="col" class="py-3 text-success fw-medium border-0" style="width: 8%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-upc me-2"></i>ISBN
                                            </div>
                                        </th>
                                        <th scope="col" class="py-3 text-success fw-medium border-0" style="width: 20%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-file-text me-2"></i>Description
                                            </div>
                                        </th>
                                        <th scope="col" class="py-3 text-success fw-medium border-0" style="width: 12%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-currency-dollar me-2"></i>Pricing
                                            </div>
                                        </th>
                                        <th scope="col" class="text-center py-3 pe-4 text-success fw-medium border-0" style="width: 10%;">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <i class="bi bi-gear me-2"></i>Actions
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr class="product-table-row" style="transition: all 0.2s ease;">
                                            <!-- Image Column -->
                                            <td class="ps-4 border-0">
                                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                {
                                                    <img src="@product.ImageUrl" 
                                                         alt="@product.Title" 
                                                         class="img-fluid rounded shadow-sm border border-success"
                                                         style="width: 60px; height: 60px; object-fit: cover; border-width: 2px !important;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-light border border-success rounded d-flex align-items-center justify-content-center shadow-sm"
                                                         style="width: 60px; height: 60px; border-width: 2px !important;">
                                                        <i class="bi bi-image text-muted fs-5"></i>
                                                    </div>
                                                }
                                            </td>
                                            
                                            <!-- Title Column -->
                                            <td class="border-0">
                                                <div>
                                                    <span class="fw-medium text-success">@product.Title</span>
                                                    <br><small class="text-muted">ID: @product.Id</small>
                                                </div>
                                            </td>
                                            
                                            <!-- Author Column -->
                                            <td class="border-0">
                                                <span class="fw-medium text-primary">@product.Author</span>
                                            </td>
                                            
                                            <!-- Category Column -->
                                            <td class="border-0">
                                                @if (product.Category != null)
                                                {
                                                    <span class="badge bg-primary bg-gradient fw-medium shadow-sm px-3 py-2">
                                                        <i class="bi bi-collection me-1"></i>@product.Category.Name
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary bg-gradient fw-medium shadow-sm px-3 py-2">
                                                        <i class="bi bi-question-circle me-1"></i>No Category
                                                    </span>
                                                }
                                            </td>
                                            
                                            <!-- ISBN Column -->
                                            <td class="border-0">
                                                <span class="badge bg-secondary bg-gradient fw-medium shadow-sm">@product.ISBN</span>
                                            </td>
                                            
                                            <!-- Description Column -->
                                            <td class="border-0">
                                                <div style="max-width: 180px;">
                                                    <span class="text-muted small">
                                                        @(product.Description?.Length > 60 ? product.Description.Substring(0, 60) + "..." : product.Description)
                                                    </span>
                                                </div>
                                            </td>
                                            
                                            <!-- Pricing Column -->
                                            <td class="border-0">
                                                <div class="d-flex flex-column gap-1">
                                                    <span class="badge bg-success bg-gradient fw-medium shadow-sm">List: @product.ListPrice.ToString("C")</span>
                                                    <span class="badge bg-warning bg-gradient fw-medium shadow-sm">Price: @product.Price.ToString("C")</span>
                                                </div>
                                            </td>
                                            
                                            <!-- Actions Column -->
                                            <td class="pe-4 border-0">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a asp-action="Details" asp-route-id="@product.Id" 
                                                       class="btn btn-outline-primary btn-sm shadow-sm fw-medium">
                                                        <i class="bi bi-eye"></i>
                                                        <span class="d-none d-xl-inline ms-1">View</span>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@product.Id" 
                                                       class="btn btn-outline-success btn-sm shadow-sm fw-medium">
                                                        <i class="bi bi-pencil"></i>
                                                        <span class="d-none d-xl-inline ms-1">Edit</span>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@product.Id" 
                                                       class="btn btn-outline-danger btn-sm shadow-sm fw-medium">
                                                        <i class="bi bi-trash"></i>
                                                        <span class="d-none d-xl-inline ms-1">Delete</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5" 
                             style="background: linear-gradient(135deg, rgba(75, 113, 71, 0.02) 0%, rgba(87, 133, 83, 0.02) 100%);">
                            <div class="mb-4">
                                <i class="bi bi-book display-1 text-success opacity-50"></i>
                            </div>
                            <h5 class="text-success fs-5 fw-medium mb-2">No products found</h5>
                            <p class="text-muted mb-4">Start by adding your first product to build your catalog</p>
                            <a asp-action="Create" 
                               class="btn btn-success btn-lg shadow-sm fw-medium">
                                <i class="bi bi-plus-circle me-2"></i>Add Your First Product
                            </a>
                        </div>
                    }
                </div>

                <!-- Enhanced Card Footer -->
                <div class="card-footer border-0 py-3" 
                     style="background: linear-gradient(135deg, rgba(75, 113, 71, 0.03) 0%, rgba(87, 133, 83, 0.03) 100%);">
                    <div class="row align-items-center">
                        <div class="col-12 col-md-6">
                            <small class="text-success d-flex align-items-center">
                                <i class="bi bi-info-circle me-2"></i>
                                <span class="fw-medium">Total: @Model.Count() products across @Model.Where(p => p.Category != null).Select(p => p.Category.Name).Distinct().Count() categories</span>
                            </small>
                        </div>
                        <div class="col-12 col-md-6 text-md-end mt-2 mt-md-0">
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>
                                Last updated: @DateTime.Now.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mobile Quick Actions Panel -->
            <div class="d-lg-none mt-3">
                <div class="card border-0 shadow-sm" 
                     style="background: linear-gradient(135deg, rgba(75, 113, 71, 0.05) 0%, rgba(75, 113, 71, 0.1) 100%); border-left: 4px solid #4b7147 !important;">
                    <div class="card-body py-3 px-3">
                        <div class="row align-items-center g-2">
                            <div class="col-8">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-lightning me-2 text-success"></i>
                                    <small class="text-success fw-medium">Quick Actions</small>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <a asp-action="Create" 
                                   class="btn btn-success btn-sm shadow-sm fw-medium w-100">
                                    <i class="bi bi-plus-circle me-1"></i>
                                    <span class="d-none d-sm-inline">Add New</span>
                                    <span class="d-sm-none">Add</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const table = document.getElementById('productTable');
            const mobileCards = document.querySelectorAll('.d-lg-none .product-mobile-item');
            
            // Enhanced search functionality with theme integration
            if (searchInput) {
                searchInput.addEventListener('keyup', function() {
                    const filter = this.value.toLowerCase();
					
                    // Add visual feedback for search
                    if (filter.length > 0) {
                        this.style.borderColor = '#4b7147';
                        this.style.borderWidth = '2px';
                        this.style.backgroundColor = 'rgba(75, 113, 71, 0.05)';
                    } else {
                        this.style.borderColor = '';
                        this.style.borderWidth = '';
                        this.style.backgroundColor = 'rgba(255,255,255,0.9)';
                    }
					
                    // Filter desktop table
                    if (table) {
                        const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
                        let visibleCount = 0;
						
                        for (let i = 0; i < rows.length; i++) {
                            const titleCell = rows[i].getElementsByTagName('td')[1];
                            const authorCell = rows[i].getElementsByTagName('td')[2];
                            const categoryCell = rows[i].getElementsByTagName('td')[3];
                            const isbnCell = rows[i].getElementsByTagName('td')[4];
							
                            if (titleCell && authorCell && categoryCell && isbnCell) {
                                const titleText = titleCell.textContent || titleCell.innerText;
                                const authorText = authorCell.textContent || authorCell.innerText;
                                const categoryText = categoryCell.textContent || categoryCell.innerText;
                                const isbnText = isbnCell.textContent || isbnCell.innerText;
								
                                const searchText = (titleText + ' ' + authorText + ' ' + categoryText + ' ' + isbnText).toLowerCase();
                                const isVisible = searchText.indexOf(filter) > -1;
                                rows[i].style.display = isVisible ? '' : 'none';
                                if (isVisible) visibleCount++;
                            }
                        }
						
                        updateResultsIndicator(visibleCount, 'desktop');
                    }
					
                    // Filter mobile cards
                    let mobileVisibleCount = 0;
                    mobileCards.forEach(function(card) {
                        const titleElement = card.querySelector('.card-title');
                        const authorElement = card.querySelector('small');
                        const badgeElements = card.querySelectorAll('.badge');
						
                        if (titleElement) {
                            let searchText = (titleElement.textContent || titleElement.innerText);
							
                            if (authorElement) {
                                searchText += ' ' + (authorElement.textContent || authorElement.innerText);
                            }
							
                            badgeElements.forEach(badge => {
                                searchText += ' ' + (badge.textContent || badge.innerText);
                            });
							
                            const isVisible = searchText.toLowerCase().indexOf(filter) > -1;
                            card.style.display = isVisible ? '' : 'none';
                            if (isVisible) mobileVisibleCount++;
                        }
                    });
					
                    updateResultsIndicator(mobileVisibleCount, 'mobile');
                });

                // Enhanced search input styling
                searchInput.addEventListener('focus', function() {
                    this.style.boxShadow = '0 0 0 0.25rem rgba(75, 113, 71, 0.25)';
                });
				
                searchInput.addEventListener('blur', function() {
                    this.style.boxShadow = '';
                });
            }

            // Function to update search results indicator
            function updateResultsIndicator(count, view) {
                const existingIndicators = document.querySelectorAll('.search-results-indicator');
                existingIndicators.forEach(el => el.remove());
				
                if (searchInput.value.length > 0) {
                    const indicator = document.createElement('div');
                    indicator.className = 'search-results-indicator mt-2';
                    indicator.innerHTML = `
                        <small class="text-success fw-medium">
                            <i class="bi bi-search me-1"></i>
                            Found ${count} result${count !== 1 ? 's' : ''} for "${searchInput.value}"
                        </small>
                    `;
					
                    if (view === 'desktop' && table) {
                        table.parentNode.insertBefore(indicator, table);
                    } else if (view === 'mobile' && mobileCards.length > 0) {
                        const mobileContainer = document.querySelector('.d-lg-none');
                        if (mobileContainer) {
                            mobileContainer.insertBefore(indicator, mobileContainer.firstChild);
                        }
                    }
                }
            }

            // Enhanced touch-friendly hover effects for mobile with theme colors
            if ('ontouchstart' in window) {
                const mobileItems = document.querySelectorAll('.product-mobile-item');
                mobileItems.forEach(function(item) {
                    item.addEventListener('touchstart', function() {
                        this.style.backgroundColor = 'rgba(75, 113, 71, 0.05)';
                        this.style.borderLeftColor = '#4b7147';
                        this.style.borderLeftWidth = '4px';
                    });
                    item.addEventListener('touchend', function() {
                        setTimeout(() => {
                            this.style.backgroundColor = '';
                            this.style.borderLeftColor = '';
                            this.style.borderLeftWidth = '';
                        }, 200);
                    });
                });

                // Add touch feedback for action buttons
                const actionButtons = document.querySelectorAll('.btn');
                actionButtons.forEach(function(btn) {
                    btn.addEventListener('touchstart', function() {
                        this.style.transform = 'scale(0.98)';
                    });
                    btn.addEventListener('touchend', function() {
                        setTimeout(() => {
                            this.style.transform = '';
                        }, 100);
                    });
                });
            }

            // Enhanced desktop table row hover effects
            const tableRows = document.querySelectorAll('.product-table-row');
            tableRows.forEach(function(row) {
                row.addEventListener('mouseenter', function() {
                    this.style.backgroundColor = 'rgba(75, 113, 71, 0.03)';
                    this.style.borderLeft = '4px solid #4b7147';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.backgroundColor = '';
                    this.style.borderLeft = '';
                });
            });

            // Image hover effects for better UX
            const productImages = document.querySelectorAll('img[alt]');
            productImages.forEach(function(img) {
                img.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.05)';
                    this.style.transition = 'transform 0.2s ease';
                });
                img.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });

            // Confirmation for delete actions with enhanced styling
            const deleteLinks = document.querySelectorAll('a[href*="Delete"]');
            deleteLinks.forEach(function(link) {
                link.addEventListener('click', function(e) {
                    const productTitle = this.closest('tr, .product-mobile-item')
                        ?.querySelector('.fw-medium.text-success, .card-title')?.textContent?.trim();
					
                    const message = productTitle 
                        ? `⚠️ Delete "${productTitle}"?\n\nThis action cannot be undone.`
                        : '⚠️ Are you sure you want to delete this product?\n\nThis action cannot be undone.';
					
                    if (!confirm(message)) {
                        e.preventDefault();
                    }
                });
            });

            // Performance optimization: Intersection Observer for lazy loading effects
            if ('IntersectionObserver' in window) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }
                    });
                }, { threshold: 0.1 });

                // Apply to stats cards for smooth entrance animation
                const statsCards = document.querySelectorAll('.col-6, .col-md-3');
                statsCards.forEach((card, index) => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = `opacity 0.6s ease ${index * 0.1}s, transform 0.6s ease ${index * 0.1}s`;
                    observer.observe(card);
                });
            }

            // Initialize tooltips for better UX
            if (typeof bootstrap !== 'undefined' && bootstrap.Tooltip) {
                const tooltipElements = document.querySelectorAll('[data-bs-toggle="tooltip"]');
                tooltipElements.forEach(el => new bootstrap.Tooltip(el));
            }
        });
    </script>
}
