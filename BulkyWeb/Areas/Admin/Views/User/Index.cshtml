                        <div class="stat-icon mb-3">
                            <i class="bi bi-person-check display-4"></i>
                        </div>
                        <h3 class="fw-bold mb-1" id="activeUsers">-</h3>
                        <p class="mb-0 opacity-90">Active Users</p>
                    </div>
