@model IEnumerable<Bulky.Models.Models.Company>

@{
    ViewData["Title"] = "Company Management - BulkyWeb";
}

<div class="container-fluid px-1 px-sm-2 px-md-3 py-2 py-md-4">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-11">
            <!-- Page Header -->
            <div class="mb-3 mb-md-4 text-center">
                <h1 class="display-6 fw-bold text-primary mb-2 fs-4 fs-sm-3 fs-md-2">
                    <i class="bi bi-building me-2"></i>Company Management
                </h1>
                <p class="text-muted lead d-none d-md-block mb-0">Manage partner companies and business relationships</p>
                <p class="text-muted small d-md-none mb-0">Manage business partners efficiently</p>
            </div>

            <!-- Stats Cards Row -->
            <div class="row mb-3 mb-md-4 g-1 g-sm-2 g-md-3">
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 3px solid #192E2F !important;">
                        <div class="card-body text-center py-2 py-sm-3 px-2">
                            <div class="d-flex align-items-center justify-content-center mb-1 mb-sm-2">
                                <div class="bg-primary bg-gradient rounded-circle p-2 p-md-3">
                                    <i class="bi bi-buildings text-white" style="font-size: 0.9rem;"></i>
                                </div>
                            </div>
                            <h5 class="card-title text-primary fw-bold mb-1" style="font-size: 1.1rem;">@Model.Count()</h5>
                            <p class="card-text text-muted small mb-0">Total Companies</p>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 3px solid #4b7147 !important;">
                        <div class="card-body text-center py-2 py-sm-3 px-2">
                            <div class="d-flex align-items-center justify-content-center mb-1 mb-sm-2">
                                <div class="bg-success bg-gradient rounded-circle p-2 p-md-3">
                                    <i class="bi bi-check-circle text-white" style="font-size: 0.9rem;"></i>
                                </div>
                            </div>
                            <h5 class="card-title text-success fw-bold mb-1" style="font-size: 1.1rem;">Active</h5>
                            <p class="card-text text-muted small mb-0">Partners</p>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 3px solid #0dcaf0 !important;">
                        <div class="card-body text-center py-2 py-sm-3 px-2">
                            <div class="d-flex align-items-center justify-content-center mb-1 mb-sm-2">
                                <div class="bg-info bg-gradient rounded-circle p-2 p-md-3">
                                    <i class="bi bi-people text-white" style="font-size: 0.9rem;"></i>
                                </div>
                            </div>
                            <h5 class="card-title text-info fw-bold mb-1" style="font-size: 1.1rem;">B2B</h5>
                            <p class="card-text text-muted small mb-0">Clients</p>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 3px solid #BD7418 !important;">
                        <div class="card-body d-flex align-items-center justify-content-between py-2 py-sm-3 px-2 px-sm-3">
                            <div class="flex-grow-1">
                                <h6 class="card-title text-primary mb-1 fw-medium" style="font-size: 0.95rem;">Quick Actions</h6>
                                <p class="card-text text-muted small mb-0 d-none d-sm-block">Add new partner</p>
                            </div>
                            <a asp-controller="Company" asp-action="Create" 
                               class="btn btn-primary btn-sm shadow-sm ms-2 fw-medium">
                                <i class="bi bi-plus-circle me-1"></i>
                                <span class="d-none d-sm-inline">Add</span>
                                <span class="d-sm-none">+</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Card -->
            <div class="card border-0 shadow-lg">
                <!-- Card Header -->
                <div class="card-header bg-primary bg-gradient text-white py-3 py-md-4" 
                     style="background: linear-gradient(135deg, #192E2F 0%, #3A595C 100%) !important;">
                    <div class="row align-items-center g-2">
                        <div class="col-12 col-md-6">
                            <h2 class="fs-6 fs-sm-5 fs-md-4 fw-medium mb-0">
                                <i class="bi bi-list-ul me-2"></i>Business Partners
                            </h2>
                        </div>
                        <div class="col-12 col-md-6">
                            <!-- Search and Filter Controls -->
                            <div class="d-flex flex-column flex-md-row gap-2 justify-content-md-end">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control border-0" 
                                           id="searchInput" 
                                           placeholder="Search companies..."
                                           style="background-color: rgba(255,255,255,0.9);">
                                    <button class="btn btn-light border-0 shadow-sm" type="button">
                                        <i class="bi bi-search text-primary"></i>
                                    </button>
                                </div>
                                <a asp-controller="Company" asp-action="Create" 
                                   class="btn btn-light btn-sm shadow-sm w-100 w-md-auto fw-medium">
                                    <i class="bi bi-plus-circle me-1 text-primary"></i>
                                    <span class="d-none d-sm-inline text-primary">Add Company</span>
                                    <span class="d-sm-none text-primary">New</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-0">
                    <!-- Mobile Card View (xs to lg) -->
                    <div class="d-lg-none">
                        @foreach (var company in Model)
                        {
                            <div class="border-bottom company-mobile-item" 
                                 style="transition: background-color 0.2s ease; border-color: rgba(25, 46, 47, 0.1) !important;">
                                <div class="p-2 p-sm-3">
                                    <div class="row align-items-start">
                                        <div class="col-8 col-sm-9">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="bg-primary bg-gradient rounded-circle p-1 p-sm-2 me-2 shadow-sm">
                                                    <i class="bi bi-building text-white" style="font-size: 0.75rem;"></i>
                                                </div>
                                                <h6 class="card-title text-primary mb-0 fw-medium" style="font-size: 0.9rem;">@company.Name</h6>
                                            </div>
                                            
                                            <!-- Company Details -->
                                            <div class="mb-2">
                                                @if (!string.IsNullOrEmpty(company.StreetAddress))
                                                {
                                                    <small class="text-muted d-block">
                                                        <i class="bi bi-geo-alt me-1"></i>@company.StreetAddress
                                                    </small>
                                                }
                                                @if (!string.IsNullOrEmpty(company.City) || !string.IsNullOrEmpty(company.State))
                                                {
                                                    <small class="text-muted d-block">
                                                        <i class="bi bi-map me-1"></i>@company.City@((!string.IsNullOrEmpty(company.City) && !string.IsNullOrEmpty(company.State)) ? ", " : "")@company.State @company.PostalCode
                                                    </small>
                                                }
                                                @if (!string.IsNullOrEmpty(company.PhoneNumber))
                                                {
                                                    <small class="text-muted d-block">
                                                        <i class="bi bi-telephone me-1"></i>@company.PhoneNumber
                                                    </small>
                                                }
                                            </div>
                                            
                                            <div class="d-flex flex-wrap gap-1">
                                                <span class="badge bg-primary bg-gradient small fw-medium">ID: @company.Id</span>
                                                <span class="badge bg-success bg-gradient small fw-medium">Active</span>
                                            </div>
                                        </div>
                                        <div class="col-4 col-sm-3">
                                            <div class="dropdown">
                                                <button class="btn btn-outline-primary btn-sm dropdown-toggle w-100 py-2 shadow-sm" 
                                                        type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                                        style="font-size: 0.8rem;">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0">
                                                    <li>
                                                        <a class="dropdown-item py-2 text-info" 
                                                           asp-controller="Company" asp-action="Details" asp-route-id="@company.Id">
                                                            <i class="bi bi-eye me-2"></i>View Details
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item py-2 text-primary" 
                                                           asp-controller="Company" asp-action="Edit" asp-route-id="@company.Id">
                                                            <i class="bi bi-pencil me-2"></i>Edit
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <a class="dropdown-item py-2 text-danger" 
                                                           asp-controller="Company" asp-action="Delete" asp-route-id="@company.Id">
                                                            <i class="bi bi-trash me-2"></i>Delete
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Desktop Table View (lg and up) -->
                    <div class="d-none d-lg-block">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0" id="companyTable">
                                <thead style="background: linear-gradient(135deg, rgba(25, 46, 47, 0.05) 0%, rgba(75, 113, 71, 0.05) 100%);">
                                    <tr>
                                        <th scope="col" class="py-3 ps-4 text-primary fw-medium border-0" style="width: 25%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-building me-2"></i>Company Name
                                            </div>
                                        </th>
                                        <th scope="col" class="py-3 text-primary fw-medium border-0" style="width: 25%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-geo-alt me-2"></i>Address
                                            </div>
                                        </th>
                                        <th scope="col" class="py-3 text-primary fw-medium border-0" style="width: 15%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-map me-2"></i>Location
                                            </div>
                                        </th>
                                        <th scope="col" class="py-3 text-primary fw-medium border-0" style="width: 15%;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-telephone me-2"></i>Phone
                                            </div>
                                        </th>
                                        <th scope="col" class="text-center py-3 pe-4 text-primary fw-medium border-0" style="width: 20%;">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <i class="bi bi-gear me-2"></i>Actions
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var company in Model)
                                    {
                                        <tr class="company-table-row" style="transition: all 0.2s ease;">
                                            <td class="ps-4 border-0">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-gradient rounded-circle p-2 me-3 shadow-sm">
                                                        <i class="bi bi-building text-white"></i>
                                                    </div>
                                                    <div>
                                                        <span class="fw-medium text-primary d-block">@company.Name</span>
                                                        <small class="text-muted">ID: @company.Id</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="border-0">
                                                <div>
                                                    @if (!string.IsNullOrEmpty(company.StreetAddress))
                                                    {
                                                        <span class="d-block">@company.StreetAddress</span>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted fst-italic">No address provided</small>
                                                    }
                                                </div>
                                            </td>
                                            <td class="border-0">
                                                <div>
                                                    @if (!string.IsNullOrEmpty(company.City) || !string.IsNullOrEmpty(company.State))
                                                    {
                                                        <span class="d-block">@company.City@((!string.IsNullOrEmpty(company.City) && !string.IsNullOrEmpty(company.State)) ? ", " : "")@company.State</span>
                                                        @if (!string.IsNullOrEmpty(company.PostalCode))
                                                        {
                                                            <small class="text-muted">@company.PostalCode</small>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted fst-italic">Not specified</small>
                                                    }
                                                </div>
                                            </td>
                                            <td class="border-0">
                                                @if (!string.IsNullOrEmpty(company.PhoneNumber))
                                                {
                                                    <span class="badge bg-info bg-gradient fw-medium">@company.PhoneNumber</span>
                                                }
                                                else
                                                {
                                                    <small class="text-muted fst-italic">Not provided</small>
                                                }
                                            </td>
                                            <td class="pe-4 border-0">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a asp-controller="Company" asp-action="Details" asp-route-id="@company.Id" 
                                                       class="btn btn-outline-info btn-sm shadow-sm fw-medium" 
                                                       data-bs-toggle="tooltip" title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                        <span class="d-none d-xl-inline ms-1">View</span>
                                                    </a>
                                                    <a asp-controller="Company" asp-action="Edit" asp-route-id="@company.Id" 
                                                       class="btn btn-outline-primary btn-sm shadow-sm fw-medium"
                                                       data-bs-toggle="tooltip" title="Edit Company">
                                                        <i class="bi bi-pencil-square"></i>
                                                        <span class="d-none d-xl-inline ms-1">Edit</span>
                                                    </a>
                                                    <a asp-controller="Company" asp-action="Delete" asp-route-id="@company.Id" 
                                                       class="btn btn-outline-danger btn-sm shadow-sm fw-medium"
                                                       data-bs-toggle="tooltip" title="Delete Company">
                                                        <i class="bi bi-trash"></i>
                                                        <span class="d-none d-xl-inline ms-1">Delete</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5" 
                             style="background: linear-gradient(135deg, rgba(25, 46, 47, 0.02) 0%, rgba(75, 113, 71, 0.02) 100%);">
                            <div class="mb-4">
                                <i class="bi bi-building display-1 text-primary opacity-50"></i>
                            </div>
                            <h5 class="text-primary fs-5 fw-medium mb-2">No companies found</h5>
                            <p class="text-muted mb-4">Start by adding your first business partner to expand your network</p>
                            <a asp-controller="Company" asp-action="Create" 
                               class="btn btn-primary btn-lg shadow-sm fw-medium">
                                <i class="bi bi-plus-circle me-2"></i>Add Your First Company
                            </a>
                        </div>
                    }
                </div>

                <!-- Enhanced Card Footer -->
                <div class="card-footer border-0 py-3" 
                     style="background: linear-gradient(135deg, rgba(25, 46, 47, 0.03) 0%, rgba(75, 113, 71, 0.03) 100%);">
                    <div class="row align-items-center">
                        <div class="col-12 col-md-6">
                            <small class="text-primary d-flex align-items-center">
                                <i class="bi bi-info-circle me-2"></i>
                                <span class="fw-medium">Total: @Model.Count() business partners</span>
                            </small>
                        </div>
                        <div class="col-12 col-md-6 text-md-end mt-2 mt-md-0">
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>
                                Last updated: @DateTime.Now.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mobile Quick Actions Panel -->
            <div class="d-lg-none mt-3">
                <div class="card border-0 shadow-sm" 
                     style="background: linear-gradient(135deg, rgba(189, 116, 24, 0.05) 0%, rgba(189, 116, 24, 0.1) 100%); border-left: 4px solid #BD7418 !important;">
                    <div class="card-body py-3 px-3">
                        <div class="row align-items-center g-2">
                            <div class="col-8">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-lightning me-2 text-warning"></i>
                                    <small class="text-warning fw-medium">Quick Actions</small>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <a asp-controller="Company" asp-action="Create" 
                                   class="btn btn-warning btn-sm shadow-sm fw-medium w-100">
                                    <i class="bi bi-plus-circle me-1"></i>
                                    <span class="d-none d-sm-inline">Add Company</span>
                                    <span class="d-sm-none">Add</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const table = document.getElementById('companyTable');
            const mobileCards = document.querySelectorAll('.d-lg-none .company-mobile-item');
            
            // Enhanced search functionality with theme integration
            if (searchInput) {
                searchInput.addEventListener('keyup', function() {
                    const filter = this.value.toLowerCase();
                    
                    // Add visual feedback for search
                    if (filter.length > 0) {
                        this.style.borderColor = '#192E2F';
                        this.style.borderWidth = '2px';
                        this.style.backgroundColor = 'rgba(25, 46, 47, 0.05)';
                    } else {
                        this.style.borderColor = '';
                        this.style.borderWidth = '';
                        this.style.backgroundColor = 'rgba(255,255,255,0.9)';
                    }
                    
                    // Filter desktop table
                    if (table) {
                        const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
                        let visibleCount = 0;
                        
                        for (let i = 0; i < rows.length; i++) {
                            const cells = rows[i].getElementsByTagName('td');
                            let found = false;
                            
                            // Search in company name, address, city, and phone
                            for (let j = 0; j < 4; j++) {
                                if (cells[j]) {
                                    const textValue = cells[j].textContent || cells[j].innerText;
                                    if (textValue.toLowerCase().indexOf(filter) > -1) {
                                        found = true;
                                        break;
                                    }
                                }
                            }
                            
                            rows[i].style.display = found ? '' : 'none';
                            if (found) visibleCount++;
                        }
                        
                        updateResultsIndicator(visibleCount, 'desktop');
                    }
                    
                    // Filter mobile cards
                    let mobileVisibleCount = 0;
                    mobileCards.forEach(function(card) {
                        const textContent = card.textContent || card.innerText;
                        const isVisible = textContent.toLowerCase().indexOf(filter) > -1;
                        card.style.display = isVisible ? '' : 'none';
                        if (isVisible) mobileVisibleCount++;
                    });
                    
                    updateResultsIndicator(mobileVisibleCount, 'mobile');
                });

                // Enhanced search input styling
                searchInput.addEventListener('focus', function() {
                    this.style.boxShadow = '0 0 0 0.25rem rgba(25, 46, 47, 0.25)';
                });
                
                searchInput.addEventListener('blur', function() {
                    this.style.boxShadow = '';
                });
            }

            // Function to update search results indicator
            function updateResultsIndicator(count, view) {
                const existingIndicators = document.querySelectorAll('.search-results-indicator');
                existingIndicators.forEach(el => el.remove());
                
                if (searchInput.value.length > 0) {
                    const indicator = document.createElement('div');
                    indicator.className = 'search-results-indicator mt-2';
                    indicator.innerHTML = `
                        <small class="text-primary fw-medium">
                            <i class="bi bi-search me-1"></i>
                            Found ${count} result${count !== 1 ? 's' : ''} for "${searchInput.value}"
                        </small>
                    `;
                    
                    if (view === 'desktop' && table) {
                        table.parentNode.insertBefore(indicator, table);
                    } else if (view === 'mobile' && mobileCards.length > 0) {
                        const mobileContainer = document.querySelector('.d-lg-none');
                        if (mobileContainer) {
                            mobileContainer.insertBefore(indicator, mobileContainer.firstChild);
                        }
                    }
                }
            }

            // Enhanced touch-friendly hover effects for mobile
            if ('ontouchstart' in window) {
                const mobileItems = document.querySelectorAll('.company-mobile-item');
                mobileItems.forEach(function(item) {
                    item.addEventListener('touchstart', function() {
                        this.style.backgroundColor = 'rgba(25, 46, 47, 0.05)';
                        this.style.borderLeftColor = '#192E2F';
                        this.style.borderLeftWidth = '4px';
                    });
                    item.addEventListener('touchend', function() {
                        setTimeout(() => {
                            this.style.backgroundColor = '';
                            this.style.borderLeftColor = '';
                            this.style.borderLeftWidth = '';
                        }, 200);
                    });
                });

                // Add touch feedback for action buttons
                const actionButtons = document.querySelectorAll('.btn');
                actionButtons.forEach(function(btn) {
                    btn.addEventListener('touchstart', function() {
                        this.style.transform = 'scale(0.98)';
                    });
                    btn.addEventListener('touchend', function() {
                        setTimeout(() => {
                            this.style.transform = '';
                        }, 100);
                    });
                });
            }

            // Enhanced desktop table row hover effects
            const tableRows = document.querySelectorAll('.company-table-row');
            tableRows.forEach(function(row) {
                row.addEventListener('mouseenter', function() {
                    this.style.backgroundColor = 'rgba(25, 46, 47, 0.03)';
                    this.style.borderLeft = '4px solid #192E2F';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.backgroundColor = '';
                    this.style.borderLeft = '';
                });
            });

            // Confirmation for delete actions
            const deleteLinks = document.querySelectorAll('a[href*="Delete"]');
            deleteLinks.forEach(function(link) {
                link.addEventListener('click', function(e) {
                    const companyName = this.closest('tr, .company-mobile-item')
                        ?.querySelector('.fw-medium, .card-title')?.textContent?.trim();
                    
                    const message = companyName 
                        ? `⚠️ Delete "${companyName}"?\n\nThis action cannot be undone and may affect associated users.`
                        : '⚠️ Are you sure you want to delete this company?\n\nThis action cannot be undone.';
                    
                    if (!confirm(message)) {
                        e.preventDefault();
                    }
                });
            });

            // Initialize tooltips
            if (typeof bootstrap !== 'undefined' && bootstrap.Tooltip) {
                const tooltipElements = document.querySelectorAll('[data-bs-toggle="tooltip"]');
                tooltipElements.forEach(el => new bootstrap.Tooltip(el));
            }

            // Performance optimization: Intersection Observer for animations
            if ('IntersectionObserver' in window) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }
                    });
                }, { threshold: 0.1 });

                // Apply to stats cards for smooth entrance animation
                const statsCards = document.querySelectorAll('.col-6, .col-md-3');
                statsCards.forEach((card, index) => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = `opacity 0.6s ease ${index * 0.1}s, transform 0.6s ease ${index * 0.1}s`;
                    observer.observe(card);
                });
            }
        });
    </script>
}

<style>
    /* Company Management Theme Enhancements */
    .company-table-row:hover {
        background-color: rgba(25, 46, 47, 0.03) !important;
        border-left: 4px solid #192E2F !important;
    }
    
    .company-mobile-item:hover {
        background-color: rgba(25, 46, 47, 0.02) !important;
        border-left-color: #192E2F !important;
        border-left-width: 4px !important;
    }
    
    /* Enhanced button hover effects */
    .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.15) !important;
    }
    
    /* Search input enhancements */
    .form-control:focus {
        border-color: #192E2F !important;
        box-shadow: 0 0 0 0.25rem rgba(25, 46, 47, 0.25) !important;
    }
    
    /* Card hover effects */
